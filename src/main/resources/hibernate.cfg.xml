<hibernate-configuration>
    <session-factory>

        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="connection.driver_class">com.p6spy.engine.spy.P6SpyDriver</property>
        <property name="connection.url">jdbc:p6spy:mysql://localhost:3306/movie</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="hibernate.show_sql ">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="main.com.movie.entity.Actor"/>
        <mapping class="main.com.movie.entity.Address"/>
        <mapping class="main.com.movie.entity.Category"/>
        <mapping class="main.com.movie.entity.City"/>
        <mapping class="main.com.movie.entity.Country"/>
        <mapping class="main.com.movie.entity.Customer"/>
        <mapping class="main.com.movie.entity.Film"/>
        <mapping class="main.com.movie.entity.FilmText"/>
        <mapping class="main.com.movie.entity.Inventory"/>
        <mapping class="main.com.movie.entity.Language"/>
        <mapping class="main.com.movie.entity.Payment"/>
        <mapping class="main.com.movie.entity.Rental"/>
        <mapping class="main.com.movie.entity.Staff"/>
        <mapping class="main.com.movie.entity.Store"/>

    </session-factory>
</hibernate-configuration>
